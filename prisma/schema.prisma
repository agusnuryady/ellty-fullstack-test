generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  username String   @unique
  password String
  role     String   @default("guest") // guest | registered

  posts    Post[]
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  value     Float
  createdAt DateTime @default(now())

  parentId  String?
  parent    Post?    @relation("PostTree", fields: [parentId], references: [id])
  children  Post[]   @relation("PostTree")

  user      User     @relation(fields: [userId], references: [id])
}
